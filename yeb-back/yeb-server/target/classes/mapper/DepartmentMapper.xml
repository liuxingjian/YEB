<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdh.server.mapper.DepartmentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cdh.server.pojo.Department">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parentId" property="parentId" />
        <result column="depPath" property="depPath" />
        <result column="enabled" property="enabled" />
        <result column="isParent" property="isParent" />
    </resultMap>

    <resultMap id="DepartmentMap"
               type="com.cdh.server.pojo.Department"
               extends="BaseResultMap">
        <collection
                property="children"
                ofType="com.cdh.server.pojo.Department"
                select="com.cdh.server.mapper.DepartmentMapper.getAllDepartments"
        column="id">

        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, parentId, depPath, enabled, isParent
    </sql>
    <!--删除部门-->
    <select id="deleteDept" statementType="CALLABLE">
        call deleteDept(
                #{id,mode=IN,jdbcType=INTEGER},
                #{result,mode=OUT,jdbcType=INTEGER}
            )
    </select>
    <!--添加部门-->
    <select id="addDept" statementType="CALLABLE">
        call addDept(
            #{name,mode=IN,jdbcType=VARCHAR},
            #{parentId,mode=IN,jdbcType=INTEGER},
            #{enabled,mode=IN,jdbcType=BOOLEAN},
            #{result,mode=OUT,jdbcType=INTEGER},
            #{id,mode=OUT,jdbcType=INTEGER}
            )
    </select>
    <!--查询所有部门-->
    <select id="getAllDepartments" resultMap="DepartmentMap">
    select <include refid="Base_Column_List" />
    from t_department
    where parentId = #{parentId}
    </select>

</mapper>
